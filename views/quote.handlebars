<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Quote</h5>

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="Quote-description">Quote Description</label>
            <textarea class="form-control" id="quote-text" aria-describedby="quote-text" placeholder="Enter Quote Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Quotes:</h3>
        <ul id="quote-list" class="list-group">
          {{#each quotes}}
          <li data-id="{{this.quoteId}}" class="list-group-item">
            <a href="quote/{{this.quoteId}}">{{this.quoteText}}</a>
            <button class="btn btn-danger float-right delete">ｘ</button>
          </li>
          {{/each}}
        </ul>            <a href="/">← Back To Home</a>
        </div>
      </div>
    </div>
  </div>
</div>
