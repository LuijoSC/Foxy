<meta charset="UTF-8">
    <title>Login</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <link href="https://fonts.googleapis.com/css?family=Alatsi&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"> </script>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">


    <body>

   
    <form  action="/login" method= "POST" class="login-form">
        <h1>Login</h1>
        <% if (messages.error) {%>
        <%=  messages.error %>
        <% } %>

    <div class="input-field col s12">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class= "validate" required>
        <span class="helper-text" data-error="wrong" data-success="right"></span>
    </div>
    <div class="input-field col s12">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class= "validate" required>
    </div>

        <input type="submit" class="logbtn" value ="Login">
        
        <div class="bottom-text">
            Don't have account? <a href="/register"> Sign up</a>
        </div>
    </form>
    <script type="text/javascript">
    $(".txtb input").on("focus", function(){
        $(this).addClass("focus");
    });
    $(".txtb input").on("blur", function(){
        if($(this).val() == "")
        $(this).removeClass("focus");
    });
    </script>

<style>
    body{
        margin: 0;
        padding: 0;
        text-decoration: none;
        font-family: 'Alatsi', sans-serif;
        box-sizing: border-box;
    }
    
    body{
        min-height: 100vh;
        background-image: linear-gradient(120deg,#d35400,#f1c40f );
    }
    
    /* label focus color */
    .input-field input:focus + label {
        color: #d35400 !important;
      }
      /* label underline focus color */
    .input-field input:focus {
        border-bottom: 1px solid #d35400 !important;
        box-shadow: 0 1px 0 0 #f1c40f !important
      }
    
    .login-form{
        width: 360px;
        background: #ecf0f1;
        height: 580px;
        padding: 80px 40px;
        border-radius: 10px;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%)   
    }
    
    .login-form h1{
        text-align:center;
        color: #d35400;
        margin-bottom: 60px;
    }
    
    .txtb{
        border-bottom: 2px solid #adadad;
        position: relative;
        margin: 30px 0;
    }
    
    .txtb input{
        font-size: 15px;
        color: #333;
        border:none;
        width: 100%;
        outline: none;
        background: none;
        padding: 0 5px;
        height: 50px;
    }
    
    .txtb span::before{
        content: attr(data-placeholder);
        position: absolute;
        top: 50%;
        left: 5px;
        color: #adadad;
        transform: translateY(-50%);
        z-index: -1;
        transition: .5s;
    }
    
    .txtb span::after{
        content: '';
        position: absolute;
        width: 0%;
        height: 2px;
        background: linear-gradient(120deg,#d35400,#f1c40f);
        transition: .5s;
    }
    
    .focus + span::before{
        top: -5px;
    }
    
    .focus + span::after{
        width: 100%;
    } 
    
    .logbtn{
        display: block;
        width: 100%;
        height: 50px;
        border: none;
        background: linear-gradient(120deg,#d35400,#f1c40f,#d35400);
        background-size: 200%;
        color: #fff;
        outline: none;
        cursor: pointer;
        transition: .5s
    }
    
    .logbtn:hover{
        background-position: right;
    }
    
    .bottom-text{
        margin-top: 60px;
        text-align: center;
        font-size: 13px;   
    }
    </style>
